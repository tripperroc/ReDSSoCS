source 'https://rubygems.org'

gem 'rails', '~> 3.2.13'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'mysql2'

group :test do
  gem 'sqlite3'
end


gem 'json'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'

  #  JavaScript runtime:
  #    We are no longer specifying a Gem to use as the JavaScript runtime.  We previously
  #    tried using 'therubyrhino' and 'therubyracer', but neither Gem is currently
  #    working consistently on both OS X and Ubuntu.
  #
  #    The default runtime on the OS X is Apple JavaScriptCore (included with the OS),
  #    so OS X should never complain about missing runtimes.  If you see this error 
  #    message on Ubuntu:
  #      Could not find a JavaScript runtime. See https://github.com/sstephenson/execjs 
  #      for a list of available runtimes.
  #    Then make certain that Node.js is installed on your Ubuntu instance using:
  #      apt-get install nodejs-dev

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

gem 'surveyor', '~> 1.4.0'
gem 'surveyor_tweaks', '0.0.10', :git => "git://github.com/charman/surveyor_tweaks.git"

# To use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# To use Jbuilder templates for JSON
# gem 'jbuilder'

# Use unicorn as the app server
# gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# Use the appropriate debugger Gem for the installed version of Ruby (1.8 vs. 1.9)
gem 'ruby-debug', :platform => :ruby_18
gem 'debugger', :platform => :ruby_19

gem 'facebooker2', "~> 0.0.17"
gem 'fb_graph'
